<resources>

    <style name="Pewaa" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <!-- ActionMode Styles -->
        <item name="android:actionModeBackground">@color/colorGrayDarker</item>
        <item name="android:backgroundStacked">@color/colorAccent</item>
        <item name="android:backgroundSplit">@color/colorGrayDarker</item>
    </style>

    <style name="Pewaa.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/immersive_bars</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowEnterTransition">@transition/home_enter</item>
        <item name="giftLoadingPlaceholderColors">@array/loading_placeholders_dark</item>
        <item name="initialBadgeColor">@color/gif_badge_dark_image</item>
    </style>

    <style name="option" parent="Theme.AppCompat.Light">

    </style>

    <style name="Dialog" parent="Base.Theme.AppCompat.Light.Dialog">

    </style>

    <style name="Widget.Pewaa" parent="android:Widget" />

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@drawable/bg_tabs_text_color</item>
    </style>

    <style name="Pewaa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Pewaa.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Pewaa.Translucent.Wishlists">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">?android:colorAccent</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="Pewaa.Translucent.Wishlists.gift">
        <item name="android:windowSharedElementEnterTransition">@transition/pewaa_gift_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/pewaa_gift_shared_return</item>
        <item name="android:windowEnterTransition">@transition/pewaa_gift_enter</item>
        <item name="android:windowReturnTransition">@transition/pewaa_gift_return</item>
    </style>

    <style name="TextAppearance.Gift" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:letterSpacing">0.01</item>-->
    </style>

    <style name="TextAppearance.Gift.None">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="ToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Pewaa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Pewaa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.GiftTitle" parent="@android:style/TextAppearance.Material.Headline">
        <!--<item name="font">roboto-mono-regular</item>-->
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.ContributorTimestamp" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">@color/hint_disabled_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">onum, smcp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.EmptyState" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TextAppearance.Button" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Pewaa.Translucent.AssignContributor">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.DarkButton" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Pewaa.DialogText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">20sp</item>
    </style>

    <style name="Widget.Pewaa.DialogTitle">
        <item name="android:textAppearance">@style/TextAppearance.DialogTitle</item>
        <item name="lineHeightHint">28sp</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.Pewaa.EmptyText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">24sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <!-- By default float labels (well, the design lib) rely on AppCompat which we're not using
         yet (minSdk=21). We use this style to work around this and to provide the accent color. -->
    <style name="TextAppearance.FloatLabelHint" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="Widget.Pewaa.HintCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <!-- todo revert to material styles? -->
    <style name="TextAppearance.Description" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:letterSpacing">0.01</item>-->
    </style>

    <style name="TextAppearance.GiftDescription" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_tertiary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.ContributorAuthor" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.ContributorAuthor.Pewaa">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Widget.Pewaa.Description">
        <item name="android:textAppearance">@style/TextAppearance.Description</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="Widget.Pewaa.GiftTitle">
        <item name="android:textAppearance">@style/TextAppearance.GiftTitle</item>
        <item name="lineHeightHint">32sp</item>
    </style>

    <style name="Widget.Pewaa.GiftDescription">
        <item name="android:textAppearance">@style/TextAppearance.GiftDescription</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <!-- les cardView styles -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="TextAppearance.Pewaa.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Pewaa.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorGray2</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--buttons style-->

    <style name="Buttons">
        <item name="android:textColor">@drawable/bg_buttons_text_color_welcome</item>
        <item name="android:background">@drawable/bg_buttons_welcome</item>
        <item name="android:padding">6dp</item>
    </style>


    <style name="ButtonDelete">
        <item name="android:textColor">@drawable/bg_buttons_text_color_welcome</item>
        <item name="android:background">@drawable/bg_buttons_delete_account</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="UndoButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
